\let\my@ssect\@ssect
\def\@ssect#1#2#3#4#5{%
    \phantomsection%
    \addcontentsline{toc}{section}{\protect\numberline{}#5}%
    \my@ssect{#1}{#2}{#3}{#4}{\centering#5}%
    %%
    \if@twocolumn%
        \ifnum\col@number=\@ne\relax%
            \let\@upperletter\relax%
        \else%
            \relax%
        \fi%
    \fi%
    \@upperletter}

