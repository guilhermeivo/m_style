\newenvironment{appendixenv}[1][\@empty]{
    \pagestyle{plain}
    \begingroup
    \appendix
    \cleardoublepage
    \ifx#1\@empty\relax
    \else
    \thispagestyle{empty}
    \vspace*{\fill}
    {%
        \centering\part*{\centering\scshape\Huge#1}%
